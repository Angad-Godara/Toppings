{
    "name": "Toppings for Youtube",
    "short_name": "Toppings",
    "version": "0.0.13",
    "manifest_version":3,
    "author": "business.darhkvoyd@gmail.com",
    "description": "Welcome to Toppings, the ultimate Chrome extension for enhancing your YouTube experience!",
    "homepage_url": "https://github.com/darhkvoyd/toppings",
    "icons": {
        "16": "/assets/icons/icon16.png",
        "32": "/assets/icons/icon32.png",
        "48": "/assets/icons/icon48.png",
        "128": "/assets/icons/icon128.png",
        "256": "/assets/icons/icon256.png",
        "512": "/assets/icons/icon512.png"
          },
    "host_permissions": ["https://*.youtube.com/*"],
    "permissions": ["webNavigation"],
    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": true
      },
    "background":{
        "service_worker": "/js/service.js"
    },
    "content_scripts": [
        {
          "matches": ["https://*.youtube.com/*"],
          "css": ["css/watch.css", "css/playlist.css"],
          "js": ["js/utils.js", "js/watch.js", "js/playlist.js"],
          "all_frames": true,
          "run_at": "document_start"
        }
      ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "Toppings: Preferences",
        "default_icon": "assets/icons/icon256.png"
    },
    "web_accessible_resources": [
        {
            "resources": ["assets/icons/icon256.png", "css/playlist.css"],
            "matches": ["https://*.youtube.com/*"]
        }
    ]
}