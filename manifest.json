{
    "manifest_version":3,
    "name": "Toppings for Youtube",
    "short_name": "Toppings",
    "author": "business.darhkvoyd@gmail.com",
    "version": "0.0.12",
    "description": "Welcome to Toppings, the ultimate Chrome extension for enhancing your YouTube experience!",
    "background":{
        "service_worker": "/js/background.js"
    },
    "permissions": ["scripting", "activeTab", "storage", "tabs"],
    "host_permissions": ["https://*.youtube.com/*"],
    "icons": {
        "16": "/assets/icons/icon16.png",
        "32": "/assets/icons/icon32.png",
        "48": "/assets/icons/icon48.png",
        "128": "/assets/icons/icon128.png",
        "256": "/assets/icons/icon256.png",
        "512": "/assets/icons/icon512.png"
          },
    "action": {
        "default_popup": "popup.html",
        "default_title": "Toppings: Preferences",
        "default_icon": "assets/icons/icon256.png"
    },
    "web_accessible_resources": [
        {
            "resources": ["assets/icons/icon256.png", "css/playlist.css"],
            "matches": ["https://*.youtube.com/*"]
        }
    ]
}